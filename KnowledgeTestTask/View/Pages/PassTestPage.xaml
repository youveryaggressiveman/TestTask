<Page x:Class="KnowledgeTestTask.View.Pages.PassTestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:KnowledgeTestTask.View.Pages"
      mc:Ignorable="d"
      d:DesignHeight="320"
      d:DesignWidth="500"
      Title="PassTestPage">
    <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                  VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal"
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <Button Content="Назад"
                        Style="{StaticResource ButtonDashed}"
                        Margin="25"
                        Width="100"
                        Command="{Binding Back}" />
                <Button Content="Закончить"
                        Style="{StaticResource ButtonDanger}"
                        Margin="25"
                        Width="100"
                        Command="{Binding End}" />
                <Button Content="Вперед"
                        Style="{StaticResource ButtonDashed}"
                        Margin="25"
                        Width="100"
                        Command="{Binding Next}" />
            </StackPanel>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock VerticalAlignment="Center"
                           FontSize="25"
                           Margin="25"
                           HorizontalAlignment="Left">
<Run Text="#" />
<Run Text="{Binding ActualQuest.Number}"
                    FontWeight="Bold" /></TextBlock>
                <TextBlock VerticalAlignment="Center"
                           Grid.Row="1"
                           Margin="35 15"
                           HorizontalAlignment="Left">
<Run Text="Вопрос: "
                    FontSize="18"
                    FontWeight="Bold"
                    FontStyle="Italic" />
                <LineBreak />
<Run Text="{Binding ActualQuest.Meaning}"
                    FontSize="15" /></TextBlock>
                <ComboBox Grid.Row="2"
                          Style="{StaticResource ComboBox.Small}"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Left"
                          Width="150"
                          ItemsSource="{Binding ActualQuest.Variables}"
                          SelectedItem="{Binding Response}"
                          Margin="35 15" />
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
